@model Noticias
@{
        ViewData["Title"] = "Noticias";
}
<div class="titulo_pagina">
    <h1>Adicionar Notícias</h1>
</div>
<div class="container">
<form method="POST" action='@Url.Action("Adicionar")' enctype="multipart/form-data">
       
        <div class="campo">
        <label for="IdNoticias">IdNoticias</label>
        <input type="text" name="IdNoticias" id="IdNoticias">
        </div>

        <div class="campo">
        <label for="Titulo">Titulo</label>
        <input type="text" name="Titulo" id="Titulo">
        </div>

         <div class="campo">
        <label for="Texto">Texto</label>
        <input type="text" name="Texto" id="Texto">
        </div>
        
        <div class="campo">
        <label for="Imagem">Imagem</label>
        <input type="file" name="Imagem" id="Imagem">
        </div>

        <button class="gradient btn" type="submit">Adicionar Notícia</button>

</form>
</div>
<table class="table table-responsive table-strinped">
        <thead>
                <th>IdNoticias</th>
                <th>Titulo</th>
                <th>Texto</th>
                <th>Imagem</th>
                <th>Açoes</th>
        </thead>
        <tbody>
                @foreach (var item in ViewBag.Noticias)
                {
                    <tr>
                            <td>@item.IdNoticias</td>
                            <td>@item.Titulo</td>
                            <td>@item.Texto</td>
                            <td>@item.Imagem</td>
                            <td><a class="nav-link text-dark" asp-area="" asp-controller="Noticias" asp-action="Excluir" asp-route-idn="@item.IdNoticias">Excluir</a></td>
                    </tr>
                }
        </tbody>

</table>